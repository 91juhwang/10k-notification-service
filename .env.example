# App
NODE_ENV=development
PUBLIC_ORIGIN=http://localhost:5173
ENCRYPTION_KEY=replace-with-32-byte-key

# API
API_PORT=4000
API_BASE_URL=http://localhost:4000
JWT_SECRET=change-me-in-real-env
JWT_EXPIRES_IN=1h
INGEST_API_KEY=dev-ingest-key

# Local demo users
AUTH_ADMIN_USERNAME=admin
AUTH_ADMIN_PASSWORD=admin123
AUTH_OPERATOR_USERNAME=operator
AUTH_OPERATOR_PASSWORD=operator123
AUTH_VIEWER_USERNAME=viewer
AUTH_VIEWER_PASSWORD=viewer123

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/microgrid

# Redis
REDIS_URL=redis://localhost:6379
REDIS_CHANNEL=microgrid.events

# SQS / AWS (LocalStack local defaults)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
SQS_ENDPOINT=http://localhost:4566
TELEMETRY_QUEUE_URL=http://localhost:4566/000000000000/microgrid-telemetry
CONTROL_QUEUE_URL=http://localhost:4566/000000000000/microgrid-control.fifo
TELEMETRY_DLQ_URL=http://localhost:4566/000000000000/microgrid-telemetry-dlq
CONTROL_DLQ_URL=http://localhost:4566/000000000000/microgrid-control-dlq.fifo
TELEMETRY_SQS_BATCH_SIZE=10
TELEMETRY_SQS_BATCH_FLUSH_MS=5
TELEMETRY_SQS_BATCH_MAX_BUFFER=20000
TELEMETRY_SQS_FLUSH_CONCURRENCY=6
TELEMETRY_SQS_BATCH_RETRY_ATTEMPTS=3
TELEMETRY_SQS_BATCH_RETRY_BASE_MS=25
TELEMETRY_SQS_BUFFER_WAIT_MS=200

# Worker
WORKER_POLL_WAIT_SECONDS=20
WORKER_BATCH_SIZE=10
WORKER_VISIBILITY_TIMEOUT_SECONDS=45
WORKER_QUEUE_BOOTSTRAP_TIMEOUT_SECONDS=120
WORKER_QUEUE_BOOTSTRAP_RETRY_MS=1000
WORKER_METRICS_LOG_INTERVAL_SECONDS=30

# Simulator load test
SIM_LOAD_RATE_PER_MINUTE=10000
SIM_LOAD_DURATION_SECONDS=300
SIM_LOAD_DEVICE_COUNT=120
SIM_LOAD_USE_BATCH=false
SIM_LOAD_BATCH_SIZE=50
SIM_LOAD_MAX_IN_FLIGHT=300
SIM_LOAD_TIMEOUT_MS=10000
SIM_SLO_MIN_SUCCESS_RATE=0.99
SIM_SLO_MAX_P95_LATENCY_MS=1500
